
<div id="wrapper">
<h1><%= link_to 'Listing Accounts', accounts_path %></h1>

<table id="keywords" cellspacing="0" cellpadding="0">

  <tr>
    <%= form_tag accounts_path, :id => "types_form", :method => :get do %>
      <%= label_tag(:t, "Filter accounts by Type") %>
      <%= select_tag(:account_type, options_for_select(@account_types, @selected)) %>
      <%= submit_tag("Filter") %>
    <% end %>
  </tr>

  <tr>
    <th><span>Name</span></th>
    <th><span>Type</span></th>
    <th><span>Amount</span></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td class="lalign"><%= account.name %></td>
    <td><%= account.accounttype %></td>
    <td><%= account.amount %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Account', new_account_path %>
<%= link_to 'New Transaction', new_transaction_path %>
</div>
